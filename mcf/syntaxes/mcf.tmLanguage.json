{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "MCF",
  "scopeName": "source.mcf",
  "fileTypes": ["mcf"],
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#strings" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.mcf",
          "match": "#.*$"
        }
      ]
    },
    "keywords": {
	  "patterns": [
		{
		  "name": "keyword.control.mcf",
		  "match": "(?i)\\b(?:if|while|for|return)\\b"
		},
		{
		  "name": "keyword.control.mcf",
		  "match": "(?i)\\b(?:math|kek|disp|показ|wait|ждать)\\b"
		},
		{
		  "name": "keyword.control.mcf",
		  "match": "(?i)\\b(?:memi|ввод_числа|mem2|rslt|opbr)\\b"
		}
	  ]
	},
    "strings": {
      "name": "string.quoted.double.mcf",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.mcf",
          "match": "\\\\."
        }
      ]
    }
  }
}